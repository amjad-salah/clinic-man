@page "/users"

@if (string.IsNullOrEmpty(errorMessage))
{
    <h3 class="text-center mb-2">المستخدمين</h3>
    <hr class="mb-3" />

    <a class="btn btn-primary border-2 mb-5" href="/users/add">
        <i class="lni lni-plus mr-2"></i>أضافة
    </a>
    @if (Users.Count > 0)
    {
        <table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>الإسم</th>
            <th>البريد الإلكتروني</th>
            <th>الصلاحية</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Users)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@Enum.GetName(user.Role)</td>
                        <td>
                            <button @onclick="() => EditUser(user.Id)" class="btn btn-primary btn-sm mx-3" title="تعديل">
                                <i class="lni lni-pen-to-square"></i>
                            </button>
                            <button @onclick="() => DeleteUser(user.Id)" class="btn btn-danger btn-sm" title="حذف">
                                <i class="lni lni-trash-3"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">لايوجد مستخدمين حالياً</div>
    }
}
else
{
    <div class="alert alert-danger text-center">@errorMessage</div>
}
