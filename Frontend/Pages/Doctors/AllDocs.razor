@page "/doctors"

<PageTitle>Doctors</PageTitle>

@if (string.IsNullOrEmpty(_errorMessage))
{
    <h3 class="text-center mb-2">الأطباء</h3>
    <hr class="mb-3" />

    <a class="btn btn-primary border-2 mb-5" href="/doctors/add">
        <i class="lni lni-plus mr-2"></i>أضافة
    </a>
    @if (Doctors.Count > 0)
    {
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>الإسم</th>
                <th>البريد الإلكتروني</th>
                <th>رقم الهاتف</th>
                <th>التخصص</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var doctor in Doctors)
            {
                <tr>
                    <td>@doctor.User!.FullName</td>
                    <td>@doctor.PhoneNo</td>
                    <td>@doctor.Specialization</td>
                    <td>
                        <button @onclick="() => EditDoctor(doctor.Id)" class="btn btn-primary btn-sm mx-3" title="تعديل">
                            <i class="lni lni-pen-to-square"></i>
                        </button>
                        <button @onclick="() => DeleteDoctor(doctor.Id)" class="btn btn-danger btn-sm" title="حذف">
                            <i class="lni lni-trash-3"></i>
                        </button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">لايوجد أطباء حالياً</div>
    }
}
else
{
    <div class="alert alert-danger text-center">@_errorMessage</div>
}